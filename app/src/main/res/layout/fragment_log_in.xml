<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AntiqueWhite"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Articulinary!"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold" />

    <!-- Subtítulo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:gravity="left"
        android:text="La vuelta a la cocina,   Nunca se hace dura"
        android:textColor="#808080"
        android:textSize="30sp" />

    <!-- Campo de Usuario-->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Usuario">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etusername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext_background"
            android:drawableStart="@drawable/ic_user"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Campo de Contraseña-->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext_background"
            android:drawableLeft="@drawable/ic_password"
            android:drawableEnd="@drawable/ic_baseline_visibility_24"
            android:drawablePadding="8dp"
            android:hint="Contraseña"
            android:inputType="textPassword"
            app:passwordToggleDrawable="@drawable/ic_baseline_visibility_off_24"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/Salmon" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tvPasswordError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/Red"
        android:textSize="12sp"
        android:layout_marginTop="4dp" />

    <!-- Checkbox "Recordar datos" -->
    <CheckBox
        android:id="@+id/checkboxRecordar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:buttonTint="@color/Salmon"
        android:layout_marginBottom="16dp"
        android:text="Recordar datos" />

    <!-- Botón de Iniciar Sesión -->
    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_edittext_background"
        android:text="Iniciar Sesión"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <!-- Botón "No tiene cuenta" -->
    <Button
        android:id="@+id/movetoregsiter_button"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/transparent"
        android:padding="0dp"
        android:text="¿No tienes cuenta? Creala"
        android:textAllCaps="false"
        android:textColor="@color/Blue"
        app:strokeWidth="0dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/GoogleLogIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#2196F3"
        android:text="Iniciar sesión con Google"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:tint="@null"
        app:cornerRadius="5dp"
        app:icon="@drawable/google48"
        app:iconGravity="textStart"
        app:iconSize="24dp"
        app:iconTint="@null"
        app:strokeColor="#E0E0E0"
        app:strokeWidth="2dp" />

</LinearLayout>
