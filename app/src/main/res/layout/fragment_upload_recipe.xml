<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/ETTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Titulo Receta" />

            <ImageView
                android:id="@+id/myImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/medimanana"
                android:clickable="true"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ETGente"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="Gente" />

                <EditText
                    android:id="@+id/ETTiempo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tiempo" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/ingredientesLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingredientes" />

            </LinearLayout>

            <Button
                android:id="@+id/addIngredientesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agregar Ingrediente" />

            <LinearLayout
                android:id="@+id/PasosLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pasos" />

            </LinearLayout>

            <Button
                android:id="@+id/addPasosButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agregar Ingrediente" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="200dp"
                android:text="Guardar" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>